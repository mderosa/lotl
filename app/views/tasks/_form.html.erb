
<%= form_for(@task, :url => @task.new_record? ? project_tasks_path(params[:project_id]) : 
                                                project_task_path(params[:project_id], @task)) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :specification %><br />
    <%= f.text_area :specification %>
  </div>
  <div class="field">
    <%= f.label :delivers_user_functionality %><br />
    <%= f.check_box :delivers_user_functionality %>
  </div>

  <% if not @task.new_record? %>
  <div class="field">
    <%= f.label :progress %><br />
    <%= f.text_field :progress %>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :priority %><br />
    <%= f.text_field :priority %>
  </div>
  <div class="field">
    <%= f.label :namespace %><br />
    <%= f.text_field :namespace %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
